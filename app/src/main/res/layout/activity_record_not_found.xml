<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spinno.buzczar.RecordNotFoundActivity"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/house_icon"/>



    <TextView android:text="No Store Found in this locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView android:text="Seems like we are not deliver grocery in this locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Change Locality"
        android:id="@+id/change_locality_button_in_no_record_activity"
        android:textColor="#ffff1813"
         android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/white_button_states"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</LinearLayout>
