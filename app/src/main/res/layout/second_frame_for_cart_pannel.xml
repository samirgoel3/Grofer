<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView25"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <View
            android:layout_width="27dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#ff585858"
            android:layout_marginTop="0.5dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/rupee_icon"
            android:layout_gravity="left|center"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="23"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/price_in_item_for_cart_layout"
            />


        </FrameLayout>

    <View
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:background="#bbbbbb"
        android:layout_marginLeft="5dp"
/>

    <ImageView
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:background="@drawable/rupee_icon_red_bold"
        android:layout_gravity="right|center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-2dp"/>
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="22"
        android:textColor="#bee4120c"
        android:textStyle="bold"
        android:id="@+id/saleprice_in_item_for_cart_layout"/>







</LinearLayout>