<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center|top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/left_arrow"
        android:layout_gravity="left"
        android:id="@+id/back_button_in_before_login_for_address"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="8dp"
                android:text="Only the register user will be able to see the address details please login or register with new account"
                android:gravity="center"
                android:textColor="#000000"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/parentlayout_in_login_activity">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/phone_number_in_before_login"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:hint="Enter Your Phone Number"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:maxLength="10"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#bbbbbb"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:inputType="textPassword"
                        android:id="@+id/password_in_before_login"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:hint="Enter Password"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Login "
                        android:id="@+id/loginbuttonin_before_login"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/red_button_states"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/no_address_icon"/>


                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Sign Up"
                        android:id="@+id/sign_up_in_before_login"
                        android:layout_marginLeft="10dp"
                        android:textColor="#e74c3c"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/white_button_states"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="It is recommended to create an account so that you can order details and track them easily."
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:padding="8dp"/>


                </LinearLayout>












<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#e74c3c"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#e74c3c"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    </LinearLayout>














            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Order as guest"
                android:id="@+id/order_as_guest_in_address_activity"
                android:background="@drawable/white_button_states"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#e74c3c"/>




        </LinearLayout>
        </ScrollView>




  </LinearLayout>