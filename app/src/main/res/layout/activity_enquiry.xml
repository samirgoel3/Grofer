<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spinno.buzczar.EnquiryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_background_normal">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/left_arrow"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center|left"
            android:id="@+id/back_button_in_cart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Enquiry  "
            android:textColor="#000000"
            android:layout_gravity="center|left"/>







        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#e74c3c"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15dp"
                android:background="@drawable/send_icon"
                android:padding="10dp"
                android:id="@+id/send_button_in_enquiry"/>

        </LinearLayout>









    </LinearLayout>




    <com.spinno.buzczar.ProgressWheel
        android:id="@+id/progress_wheel_in_enquiry"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="#ffff1813"
        wheel:matProg_progressIndeterminate="true"
        android:layout_gravity="center"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/parent_layout_in_enquiry">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/contactframeeee">
    <include layout="@layout/contact_frame"/>
    </FrameLayout>
           


