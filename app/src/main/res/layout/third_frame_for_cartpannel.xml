<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/rupee_icon_grey"
        android:layout_gravity="right|center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="34"
        android:layout_marginTop="5dp"
        android:id="@+id/price_that_is_multiplied_unit_cart_layout"/>

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X"
        android:id="@+id/textView31"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>



    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/down_button_item_for_cartpannel"
        android:background="@drawable/down_button_states"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"/>



        <EditText
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="99"
            android:layout_marginTop="5dp"
            android:background="#1bffffff"
            android:gravity="center"
            android:id="@+id/no_of_unit_getting_in_item_for_cartlayut"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:inputType="numberSigned|none"
            android:maxLength="2"
            android:digits="0123456789"
            />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/up_button_item_for_cartpannel"
        android:background="@drawable/up_button_states"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="="
        android:id="@+id/textView32"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/rupee_icon_red_bold"
        android:layout_marginLeft="5dp"
        android:layout_gravity="right|center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="68"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/resultte_amount_of_product_in_cart_layout"
        android:textColor="#f9e4120c"
        />


</LinearLayout>