<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spinno.buzczar.LocationWithNoChange"
    android:gravity="center|top"
    android:orientation="vertical">





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select city"
        android:background="@drawable/white_button_states"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="#e74c3c"
        android:id="@+id/selectcitybutton"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbbbbb"
        android:layout_marginTop="20dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp" >




        <include layout="@layout/noaddress"
            android:id="@+id/noddress"/>

        <include layout="@layout/withaddress"
            android:id="@+id/withaddress"/>
       </FrameLayout>


</LinearLayout>
